<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/Registermember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="50dp"
        android:text="회원 가입"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/idText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:hint="ID"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />


    <EditText
        android:id="@+id/passwordText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/idText"
        android:layout_marginTop="200dp"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />


    <RadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/genderWoman"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:text="여성" />

        <RadioButton
            android:id="@+id/genderMan"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/genderGroup"

            android:layout_weight="1"
            android:text="남성" />

    </RadioGroup>

    <EditText
        android:id="@+id/username"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:hint="USERNAME"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/birtheText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:drawableStart="@drawable/ic_cake_black_24dp"
        android:drawableLeft="@drawable/ic_cake_black_24dp"
        android:hint="yyyy.mm.dd"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <Button
        android:id="@+id/joinButton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="#ffffff"
        android:text="Join"
        android:textColor="#FCBF66"
        android:textSize="20dp" />

</RelativeLayout>